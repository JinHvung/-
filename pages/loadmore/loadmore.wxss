/* pages/loadmore/loadmore.wxss */

page {
  background-color: #fff;
}

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  background-color: #202155;
  display: inline-block;
  vertical-align: middle;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore-tips {
  display: inline-block;
  vertical-align: middle;
}

.weui-loadmore-line {
  border-top: 1px solid #e5e5e5;
  margin-top: 2.4em;
}

.weui-loadmore-tips-in-line {
  position:  relative;
  top: -0.9em;
  padding: 0 .55em;
  background-color:  #ffffff;
  color: #999999;
}
.weui-loadmore-tips-in-line-dot{
  position: relative;
  padding:  0 .16em;
  width: 4px;
  height: 1.6em;
}

.weui-loadmore-tips-in-line-dot :before {
  content:  " ";
  position:  absolute;
  top:  50%;
  left:  50%;
  margin-top: -1px;
  margin-left: -2px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #e5e5e5;
}
